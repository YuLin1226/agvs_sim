<?xml version="1.0"?>
<robot name="$(arg robotName)"  xmlns:xacro="http://ros.org/wiki/xacro">
  

    <!-- LIDAR SENSOR -->
    <xacro:macro name="lidar" params ="prefix suffix x y z yaw"> 
        <link name="${prefix}_laser_${suffix}"/>

        <joint name="${prefix}_joint_laser_${suffix}" type="fixed">
            <axis xyz="0 1 0" />
            <origin xyz="${x} ${y} ${z}" rpy="0 0 ${yaw}"/>
            <parent link="${prefix}_base_link"/>
            <child link="${prefix}_laser_${suffix}"/>
        </joint>



        <gazebo reference="${prefix}_laser_${suffix}">
            <sensor type="ray" name="${suffix}_sick_sensor">
                <pose>0 0 0 0 0 0</pose>
                <visualize>false</visualize>
                <update_rate>30</update_rate>
                <ray>
                    <scan>
                        <horizontal>
                            <samples>720</samples>
                            <resolution>1</resolution>
                            <min_angle>-1.570796</min_angle>
                            <max_angle>1.570796</max_angle>
                        </horizontal>
                    </scan>
                    <range>
                        <min>0.10</min>
                        <max>10.0</max>
                        <resolution>0.01</resolution>
                    </range>
                    <noise>
                        <type>gaussian</type>
                        <mean>0.0</mean>
                        <stddev>0.01</stddev>
                    </noise>
                </ray>

                <plugin name="gazebo_ros_${suffix}_sick_controller" filename="libgazebo_ros_laser.so">
                    <robotNamespace>$(arg robotName)</robotNamespace>
                    <topicName>${suffix}/scan</topicName>
                    <frameName>${prefix}_laser_${suffix}</frameName>
                </plugin>
            </sensor>
        </gazebo>

    </xacro:macro>
    
    <xacro:lidar prefix="DSR" suffix="front" x="0.772" y="0" z="0.14" yaw="0"/>
    <xacro:lidar prefix="DSR" suffix="rear" x="-0.772" y="0" z="0.14" yaw="3.1416"/>

</robot>